@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Achternaam"></label>
                <input asp-for="Input.Achternaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Gebruikersnaam"></label>
                <input asp-for="Input.Gebruikersnaam" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.IsActief"></label>
                <input type="radio" asp-for="Input.IsActief" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.IsAdmin"></label>
                <input type="radio" asp-for="Input.IsAdmin" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}