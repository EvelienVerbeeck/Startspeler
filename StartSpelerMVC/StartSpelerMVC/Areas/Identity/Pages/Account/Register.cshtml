@page
@model RegisterModel
@{
    ViewData["Title"] = "Inschrijven";
    var roles = (List<IdentityRole>)ViewData["roles"];
    ViewData["Titel"] = "Inschrijven";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class=" Blauwachtergrond offset-2  col-md-5 col-sm-10 mx-auto my-auto DivKadercentreren ">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="BlauweKleur Centreren h-100 w-100 p-5">
                <section asp-validation-summary="ModelOnly" class="text-danger"></section>
                <section class="form-group">
                    <label asp-for="Input.Voornaam"></label>
                    <input asp-for="Input.Voornaam" class="form-control" />
                    <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Achternaam"></label>
                    <input asp-for="Input.Achternaam" class="form-control" />
                    <span asp-validation-for="Input.Achternaam" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Gebruikersnaam"></label>
                    <input asp-for="Input.Gebruikersnaam" class="form-control" />
                    <span asp-validation-for="Input.Gebruikersnaam" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </section>
                <section class="form-group">
                    <label asp-for="Input.Geboortedatum"></label>
                    <input type="datetime-local" asp-for="Input.Geboortedatum" class="form-control" />
                    <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
                </section>
                <section class="m-1 align-content-center m-5 ">
                    <button type="submit" class="btn-orange rounded-sm float-left">Inschrijven</button> <a class="btn-orange rounded-sm float-right " asp-controller="Home" asp-action="Index">Annuleren</a>
                </section>
                </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
