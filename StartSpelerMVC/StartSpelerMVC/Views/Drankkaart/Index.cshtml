@model IEnumerable<StartSpelerMVC.Models.Drankkaart>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AantalSlots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begindatum)
