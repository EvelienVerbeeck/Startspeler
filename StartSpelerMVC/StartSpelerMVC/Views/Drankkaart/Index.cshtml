                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AantalSlots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Begindatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBetaald)
            </td>
