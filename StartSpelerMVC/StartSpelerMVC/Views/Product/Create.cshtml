            <div class="form-group">
                <label asp-for="Product.StartDatum" class="control-label"></label>
                <input asp-for="Product.StartDatum" class="form-control" />
                <span asp-validation-for="Product.StartDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.EindDatum" class="control-label"></label>
                <input asp-for="Product.EindDatum" class="form-control" />
                <span asp-validation-for="Product.EindDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.AankoopPrijs" class="control-label"></label>
                <input asp-for="Product.AankoopPrijs" class="form-control" />
