@model StartSpelerMVC.ViewModels.ListProducttypeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="ProductType" asp-action="Search" method="get">
    <div>
        <p>
            Zoek Product type:
            <input asp-for="Zoekproducttypes"/>
            <input type="submit" value="Zoeken" class="btn-orange" />|
            <a asp-controller="ProductType" asp-action="Index">Terug naar volledige lijst</a>
        </p>

    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductType[0].Naam)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductTypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductTypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
