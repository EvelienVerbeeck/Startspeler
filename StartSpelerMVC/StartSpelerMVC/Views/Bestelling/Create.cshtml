@model StartSpelerMVC.ViewModels.CreateBestellingViewModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="position-absolute col-10 offset-1 col-sm-11">
    <h1>Bestelling</h1>

    <div class="row">
        @*overzicht producten*@

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Frisdrank
                    </th>
                    <th>
                        Alcoholische Drank
                    </th>
                    <th>
                        Snack
                    </th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Productenlijst)
                {
                    <tr>
                        <td>
                            @*producttype=Frisdrank*@
                            @Html.DisplayFor(modelItem => item.Naam)
                            @Html.DisplayFor(modelItem => item.VerkoopPrijs)
                        </td>
                        <td>
                            @*producttype=alcohol*@
                        @Html.DisplayFor(modelItem => item.Naam)
                        @Html.DisplayFor(modelItem => item.VerkoopPrijs)
                    </td>
                    <td>
                        @*producttype=snack*@
                    @Html.DisplayFor(modelItem => item.Naam)
                    @Html.DisplayFor(modelItem => item.VerkoopPrijs)
                </td>
            </tr>
        }
               
            </tbody>
        </table>
    </div>

    <div class="row">
        @*totaal bestelling en buttons*@
        <div class="col-8">
            <table class="table">
                <tbody>
                <thead>
                    <tr>
                        <th>
                            Product
                        </th>
                        <th>
                            Prijs
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Productenlijst)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Naam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VerkoopPrijs)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="col-4">
            
            <a class="btn-block btn-orange" asp-controller="" asp-action="Edit">Aanpassen</a>
            <a class="btn-block btn-orange" asp-controller="" asp-action="Create">Bestellen</a>
            <a class="btn-block btn-orange" asp-controller="" asp-action="Delete">Annuleren</a>
        </div>
        
    </div>

    <div class="row">
        @*drankkaart*@
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
